{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DocuTools",
  "version": "1.0.0",
  "identifier": "com.tauri-app.docutools",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DocuTools",
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "license": "MIT",
    "licenseFile": "../LICENSE",
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": null,
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      },
      "wix": null
    },
    "linux": {
      "rpm": {
        "epoch": 0,
        "files": {},
        "release": "1",
        "preInstallScript": "~/Project/file-organizer/src-tauri/scripts/prescript.sh",
        "postInstallScript": "~/Project/file-organizer/src-tauri/scripts/postscript.sh",
        "preRemoveScript": "~/Project/file-organizer/src-tauri/scripts/prescript.sh",
        "postRemoveScript": "~/Project/file-organizer/src-tauri/scripts/postscript.sh"
      }
    }
  }
}
